

<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading text-center"> <strong>Listado de Premios y Disponibilidad</strong></div>

    <!-- Table -->
  <table class="table">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th>Description</th>
	    <th>Amount</th>
	    <th colspan="3"></th>
	  </tr>
	</thead>
	<tbody>
	  <% @admin_prizes.each do |admin_prize| %>
	    <tr>
	      <td><%= admin_prize.name %></td>
	      <td><%= admin_prize.description %></td>
	      <td>
	      	<%= admin_prize.amount %>
	      	<%= link_to 'Show', admin_prize %>
	      	<%= link_to 'Edit', edit_admin_prize_path(admin_prize) %>
	      	<%= link_to 'Destroy', admin_prize, method: :delete, data: { confirm: 'Are you sure?' } %>
	      </td>	      
	    </tr>
	  <% end %>
	</tbody>    
  </table>
</div>






